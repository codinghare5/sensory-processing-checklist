    <div class="d-inline-flex">
        <label class="fs-3" for="choosesense">
            Name of Sense to Edit:
        </label>
        <select id="choosesense" class="fs-3 p-1 ps-2 ms-1">
            {% for sense in categoryquestions[0].senses %}
                <option value="{{ loop.index - 1 }}">
                    {{ sense.sense }}
                </option>
            {% endfor %}
